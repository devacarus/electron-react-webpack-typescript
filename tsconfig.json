{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    /** Specify ECMAScript target version */
    "target": "ES6",
    /** Specify module code generation */
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
